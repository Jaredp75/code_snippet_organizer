  <title>Code Snippet Organizer Login</title>
  <link rel="stylesheet" type="text/css" href="/public/style.css" />
</head>
<body>
  <div class="navigation">
    {{#user}}
    <p><a href="/create/">Create</a></p>
    <p><a href="/logout/">Logout</a></p>
      {{/user}}
